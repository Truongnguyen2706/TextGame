<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3665B">

    <TextView
        android:id="@+id/Create_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:text="Create an account"
        android:textAppearance="@style/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Tag_Create_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="Full name"
        android:textAppearance="@style/full_name"
        app:layout_constraintBottom_toTopOf="@+id/Create_FullName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Create_FullName"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/border_textbox"
        android:hint="Full name"
        android:paddingLeft="16dp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/Tag_Create_Email"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Tag_Create_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="Email"
        android:textAlignment="center"
        android:textAppearance="@style/email"
        app:layout_constraintBottom_toTopOf="@+id/Create_Email"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Create_Email"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/border_textbox"
        android:gravity="center_vertical"
        android:hint="Email"
        android:paddingLeft="16dp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/Tag_Pass"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Tag_Pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="Password"
        android:textAppearance="@style/password"
        app:layout_constraintBottom_toTopOf="@+id/Create_Password"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Create_Password"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/border_textbox"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/Create_validate"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Create_validate"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/createanaccount_background"
        android:gravity="center_horizontal|center"
        android:text="Validate"
        android:textAppearance="@style/validate"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="139dp"
        android:gravity="center_horizontal|center"
        android:text="Already have an account ? Login"
        android:textAppearance="@style/already_hav"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/Create_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/Create_FullName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Create_an_account" />


</androidx.constraintlayout.widget.ConstraintLayout>